	// 모든 연락처 출력
	public void printAllAddr(Addr Addr) {
		if (addr2.equals(null)) {
			System.out.println("저장된 연락처가 없습니다.");
		} else {
			for(int i = 0; i < addr2.length; i++) {
				Addr.printInfo();
			}
		}
	}
	
